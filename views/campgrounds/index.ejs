<% layout('layouts/boilerplate') %>
<div id="cluster-map"></div>
<h1>All Campgrounds</h1>
<div>
    <a href="/campgrounds/new">Add a Campground</a>
</div>

<% for (let campground of campgrounds) {%>
<div class="card mb-3" mb-3>
    <div class="row">
        <div class="col-md-4">
            <% if (campground.images.length) {%>
            <img class="img-fluid" src="<%=campground.images[0].url%>" alt="image of <%=campground.title%>">
            <% } else {%>
            <!--  Add default image -->
            <img class="img-fluid" src="https://res.cloudinary.com/ddjfk5dyz/image/upload/v1726073981/YelpCamp/oay6lg4dzqqwa1buqzqc.jpg"
                alt="image of <%=campground.title%>">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%=campground.title%></h5>
                <p class="card-text"><%=campground.description%></p>

                <p class="card-text">
                    <small class="text-muted">
                        <%=campground.location%>
                    </small>
                </p>
                <a class="btn btn-primary" href="/campgrounds/<%=campground._id%>">View <%= campground.title %>
                </a>
            </div>
        </div>
    </div>
</div>

<% } %>
<script>
    // In seperate js file, '< %- process.env.MAPBOX_TOKEN %>' will not be considered as ejs
    // We need to define it here first, then add it in the js file
    const mapToken = '<%- process.env.MAPBOX_TOKEN %>';

    const campgrounds = {
        features: '<%- JSON.stringify(campgrounds) %>'
    };
</script>
<script src="/js/clusterMap.js"></script>